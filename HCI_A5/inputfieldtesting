    window.onload = function() {
      document.getElementById("inputfield").onkeydown = function(){
        console.log(event.keyCode);
        if(event.keyCode == 13){
          if(document.getElementById("inputfield").value == "give me pie"){
            location.href = "http://s3.amazonaws.com/gmi-digital-library/3cf7cb34-8f77-4885-bfec-697f96dd5d61.jpg";
          }
        }
      };
    };
